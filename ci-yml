name: Lab 4 CI Pipeline

on:
  push:
    branches:
      - '*'
  pull_request:
    branches:
      - '*'

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Use Node.js 24.x
        uses: actions/setup-node@v4
        with:
          node-version: "24"

      - name: Install dependencies
        run: npm 

      - name: Run linter
        run: npm run lint

  unit-tests:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Use Node.js 24.x
        uses: actions/setup-node@v4
        with:
          node-version: "24"

      - name: Install dependencies
        run: npm ci

      - name: Run unit tests
        run: npm run test-unit
  e2e-tests:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Use Node.js 24.x 
        uses: actions/setup-node@v4
        with:
          node-version: "24"

      - name: Install dependencies
        run: npm ci

      - name: Run end-to-end tests
        run: npm run test-e2e
        
build-artifact:
  if: github.ref == 'refs/heads/main'
  needs: [lint, unit-tests, e2e-tests]
  runs-on: ubuntu-latest
  steps:
    - uses: actions/checkout@v4

    - name: Use Node.js 24.x
      uses: actions/setup-node@v4
      with:
        node-version: "24"

    - name: Install dependencies
      run: npm ci

    - name: Build or package app
      run: zip -r yeetcode.zip .

    - name: Upload build artifact
      uses: actions/upload-artifact@v4
      with:
        name: app-build
        path: yeetcode.zip
